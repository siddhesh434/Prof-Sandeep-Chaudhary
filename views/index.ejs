  }

  /* SDG Tags */
  .sdg-tags {
    display: flex;
    gap: 15px;
    margin-top: 15px;
    flex-wrap: wrap;
  }

  .sdg-tag {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 1.2rem;
    position: relative;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .sdg-tag:hover {
    transform: scale(1.1);
  }

  .sdg-tag[data-sdg="9"] {
    background-color: #ff6b6b;
  }

  .sdg-tag[data-sdg="11"] {
    background-color: #4ecdc4;
  }

  .sdg-tag[data-sdg="12"] {
    background-color: #ffd166;
  }

  .sdg-tooltip {
    position: absolute;
    top: -40px;
    left: 50%;
    transform: translateX(-50%);
    background-color: rgba(0, 0, 0, 0.8);
    color: white;
    padding: 5px 10px;
    border-radius: 4px;
    font-size: 0.8rem;
    width: max-content;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s;
  }

  .sdg-tag:hover .sdg-tooltip {
    opacity: 1;
  }

  /* Hexagon Research Areas */
  .research-areas-section {
    margin-bottom: 60px;
  }

  .hexagon-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 30px;
    margin-top: 40px;
  }

  .hexagon-item {
