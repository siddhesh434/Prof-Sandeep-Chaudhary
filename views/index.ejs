  /* Moving Bulletin */
  .moving-bulletin {
    background-color: var(--primary-color);
    color: white;
    padding: 10px 0;
    overflow: hidden;
    position: relative;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  }

