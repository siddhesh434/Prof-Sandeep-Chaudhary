<style>
  /* Hero Image Section */
  /* Hero Image Section */
  .hero-image {
    height: 400px;
    background-size: cover;
    background-position: center;
    position: relative;
    display: flex;
    align-items: center;
  }

  /* Base hero image overlay */
  .hero-image::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("images/WhatsApp\ Image\ 2025-03-24\ at\ 3.12.32\ PM.jpeg");
    background-size: cover;
    background-position: center;
  }

  /* Light mode overlay adjustment */
  :root:not(.dark-mode) .hero-image::before {
    opacity: 0.8; /* Higher opacity in light mode for better visibility */
    filter: brightness(0.7) contrast(1.2); /* Darkens the image in light mode */
  }

  /* Dark mode overlay adjustment */
  :root.dark-mode .hero-image::before,
  .dark-mode .hero-image::before {
    opacity: 0.5; /* Original opacity works well for dark mode */
  }

  /* Add a subtle gradient overlay for better text contrast in both modes */
  .hero-image::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.5));
    z-index: 1;
  }

  /* Hero text positioning */
  .hero-text {
    position: relative;
    color: #fff;
    text-align: center;
    width: 100%;
    z-index: 2; /* Place above the overlay */
  }

  .hero-text h1 {
    font-size: 4rem;
    margin-bottom: 10px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .hero-text p {
    font-size: 1.5rem;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
  }

  /* Section styling */
  .section {
    margin-bottom: 60px;
  }

  /* Highlight the abbreviation */
  .highlight {
    color: var(--primary-color);
    font-weight: bold;
  }

  /* Mission and Vision */
  .mission-vision {
    display: flex;
    gap: 30px;
    margin-top: 30px;
  }

  .mission,
  .vision {
    flex: 1;
    background-color: var(--secondary-bg);
    padding: 20px;
    border-radius: 8px;
    border-left: 4px solid var(--primary-color);
  }

  .mission h3,
  .vision h3 {
    color: var(--primary-color);
    margin-bottom: 15px;
  }

  /* SDG Badges */
  .badge {
    display: inline-block;
    padding: 5px 10px;
    margin: 0 5px;
    background-color: var(--primary-color);
    color: white;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: bold;
  }

  /* Research Areas Grid */
  .research-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 30px;
    margin-top: 30px;
  }

  .research-item {
    background-color: var(--secondary-bg);
    padding: 25px;
    border-radius: 8px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .research-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .research-icon {
    font-size: 2.5rem;
    color: var(--primary-color);
    margin-bottom: 15px;
  }

  .research-item h3 {
    margin-bottom: 10px;
    font-size: 1.3rem;
  }

  /* Innovations styling */
  .innovation-grid {
    display: flex;
    flex-direction: column;
    gap: 40px;
    margin-top: 30px;
  }

  .innovation-item {
    display: flex;
    gap: 30px;
    background-color: var(--secondary-bg);
    border-radius: 8px;
    overflow: hidden;
  }

  .innovation-img {
    flex: 1;
    max-width: 300px;
    height: 250px;
    overflow: hidden;
  }

  .innovation-img img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.5s ease;
  }

  .innovation-item:hover .innovation-img img {
    transform: scale(1.05);
  }

  .innovation-content {
    flex: 2;
    padding: 25px;
  }

  .innovation-content h3 {
    color: var(--primary-color);
    margin-bottom: 15px;
  }

  .innovation-features {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: 15px;
  }

  .innovation-features span {
    padding: 5px 12px;
    background-color: rgba(90, 185, 168, 0.1);
    border: 1px solid var(--primary-color);
    border-radius: 20px;
    font-size: 0.8rem;
  }

  /* Rural Development */
  .initiatives-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
    margin-top: 30px;
  }

  .initiative {
    background-color: var(--secondary-bg);
    padding: 25px;
    border-radius: 8px;
    text-align: center;
    transition: transform 0.3s ease;
  }

  .initiative:hover {
    transform: translateY(-5px);
  }

  .initiative-icon {
    font-size: 2.5rem;
    color: var(--primary-color);
    margin-bottom: 15px;
  }

  .initiative h3 {
    margin-bottom: 10px;
  }

  /* Carousel Section */
  .carousel-section {
    background-color: var(--secondary-bg);
    padding: 60px 0;
    margin-top: 40px;
  }

  .carousel-section h2 {
    text-align: center;
    margin-bottom: 40px;
    color: var(--text-color);
    position: relative;
  }

  .carousel-section h2::after {
    content: "";
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background-color: var(--primary-color);
  }

  .carousel-container {
    position: relative;
    height: 400px;
    margin: 0 auto;
    overflow: hidden;
  }

  .carousel-track {
    position: absolute;
    top: 0;
    left: 0;
    transition: transform 0.5s ease;
    height: 100%;
    display: flex;
  }

  .carousel-slide {
    position: relative;
    width: 350px;
    height: 100%;
    margin-right: 20px;
  }

  .carousel-content {
    height: 100%;
    width: 200%;
    background-color: var(--card-bg);
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .carousel-content img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .carousel-content h3 {
    padding: 15px 20px 5px;
    color: var(--text-color);
    font-size: 1.2rem;
  }

  .carousel-content p {
    padding: 0 20px 20px;
    color: var(--text-color);
    opacity: 0.8;
  }

  .carousel-prev,
  .carousel-next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: #20232a;
    color: white;
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    z-index: 10;
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }

  .carousel-prev:hover,
  .carousel-next:hover {
    opacity: 1;
  }

  .carousel-prev {
    left: 10px;
  }

  .carousel-next {
    right: 10px;
  }

