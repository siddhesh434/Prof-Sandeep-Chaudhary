<%- include('partials/header') %>
<style>
  /* Research Opportunities Section */
  .research-section {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .research-section h2 {
    font-size: 2rem;
    margin-bottom: 25px;
    position: relative;
    padding-bottom: 10px;
  }

  .research-section h2::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 50px;
    height: 3px;
    background-color: var(--primary-color);
  }

  .research-intro {
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 10px;
  }

  .research-domains {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 25px;
    margin: 20px 0;
  }

  .domain-card {
    background-color: var(--secondary-bg);
    border-radius: 8px;
    padding: 25px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid var(--border-color);
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .domain-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .domain-icon {
    font-size: 2.5rem;
    color: var(--primary-color);
    margin-bottom: 5px;
  }

  .domain-card h3 {
    font-size: 1.2rem;
    margin-bottom: 10px;
    color: var(--text-color);
  }

  .domain-card p {
    font-size: 0.95rem;
    line-height: 1.5;
    color: var(--text-color);
    opacity: 0.85;
  }

  .research-contact {
    background-color: var(--secondary-bg);
    border-radius: 10px;
    padding: 30px;
    margin-top: 10px;
    border: 1px solid var(--border-color);
  }

  .contact-info h3 {
    font-size: 1.4rem;
    margin-bottom: 20px;
    color: var(--text-color);
  }

  .contact-info p {
    margin-bottom: 15px;
    line-height: 1.6;
  }

  .funding-note {
    padding: 15px;
    background-color: rgba(0, 0, 0, 0.05);
    border-radius: 6px;
    border-left: 4px solid var(--primary-color);
    margin: 20px 0;
  }

  .contact-button {
    display: inline-block;
    background-color: var(--primary-color);
    color: white;
    padding: 12px 25px;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 500;
    margin-top: 15px;
    transition: all 0.3s ease;
  }

  .contact-button:hover {
    background-color: var(--primary-color);
    opacity: 0.9;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  @media (max-width: 768px) {
    .research-domains {
      grid-template-columns: 1fr;
    }

    .research-contact {
      padding: 20px;
    }
  }
</style>

<section class="section research-section" style="margin-bottom: 0px">
  <h2>Research Opportunities</h2>

  <div class="research-intro">
    <p>
      Advertisement for PhD/JRF/SRF research opportunities whenever available
      are displayed on the
      <a
        href="https://academic.iiti.ac.in/phdadvt.php"
        style="color: cornflowerblue"
        >institute website</a
      >
      . The PhD/JRF/SRF research opportunities will also be displayed here.
    </p>
  </div>

  <div class="research-domains">
    <div class="domain-card">
      <div class="domain-icon">
        <i class="fas fa-microchip"></i>
      </div>
      <h3>Cyber Physical Systems (CPS)</h3>
      <p>
        Research focused on integration of computation, networking, and physical
        processes.
      </p>
    </div>

    <div class="domain-card">
      <div class="domain-icon">
        <i class="fas fa-cogs"></i>
      </div>
      <h3>Product Engineering</h3>
      <p>
        Development of innovative products from concept to commercialization.
      </p>
    </div>

    <div class="domain-card">
      <div class="domain-icon">
        <i class="fas fa-building"></i>
      </div>
      <h3>Translational Research in Civil Engineering</h3>
      <p>
        Applying research outcomes to practical applications in civil
        infrastructure.
      </p>
    </div>

    <div class="domain-card">
      <div class="domain-icon">
        <i class="fas fa-home"></i>
      </div>
      <h3>Rural Development</h3>
      <p>Sustainable solutions addressing challenges in rural communities.</p>
    </div>
  </div>

  <div class="research-contact">
    <div class="contact-info">
      <h3>How to Apply</h3>
      <p>
        Motivated researchers interested in working in these domains can contact
        via email throughout the year.
      </p>
      <p class="funding-note">
        <span class="highlight">Funding Available: </span> Applicants can get
        sponsorship for carrying out their research along these domains.
      </p>
      <a href="mailto:research@example.edu" class="contact-button"
        >Contact Research Office</a
      >
    </div>
  </div>
</section>

<%- include('partials/footer') %>

<script>
  // Script to handle theme changes affecting the research section
  document.addEventListener("DOMContentLoaded", function () {
    // Check for theme toggle changes
    const themeToggle = document.querySelector(".theme-switch input");

    if (themeToggle) {
      themeToggle.addEventListener("change", function () {
        // The CSS variables will automatically handle color changes
        // This is just for any additional theme-specific adjustments if needed
      });
    }

    // Optional: Add animation for domain cards on scroll
    const domainCards = document.querySelectorAll(".domain-card");

    if ("IntersectionObserver" in window) {
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.style.opacity = 1;
              entry.target.style.transform = "translateY(0)";
            }
          });
        },
        { threshold: 0.1 }
      );

      domainCards.forEach((card) => {
        card.style.opacity = 0;
        card.style.transform = "translateY(20px)";
        card.style.transition = "opacity 0.5s ease, transform 0.5s ease";
        observer.observe(card);
      });
    }
  });
</script>
